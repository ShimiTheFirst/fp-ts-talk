{
    "compilerOptions": {
        "target": "es5",       
        "module": "commonjs",       
        "outDir": "./dist",
        "lib": ["es6"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["./src/**/*", "./test/**/*"],
    "exclude": ["node_modules"]
}